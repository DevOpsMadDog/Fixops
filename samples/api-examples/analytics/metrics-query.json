{
  "query_type": "security_metrics",
  "time_range": {
    "start": "2025-01-01T00:00:00Z",
    "end": "2025-01-15T23:59:59Z"
  },
  "metrics": [
    {
      "name": "vulnerability_count",
      "aggregation": "sum",
      "filters": {
        "severity": ["critical", "high"]
      },
      "group_by": ["application", "severity"]
    },
    {
      "name": "mttr",
      "aggregation": "avg",
      "unit": "days",
      "filters": {
        "status": "resolved"
      },
      "group_by": ["team", "severity"]
    },
    {
      "name": "sla_compliance",
      "aggregation": "percentage",
      "filters": {},
      "group_by": ["team"]
    },
    {
      "name": "risk_score",
      "aggregation": "avg",
      "filters": {},
      "group_by": ["application"]
    },
    {
      "name": "deployment_blocks",
      "aggregation": "count",
      "filters": {
        "reason": "security_policy"
      },
      "group_by": ["application", "policy_rule"]
    }
  ],
  "comparison": {
    "enabled": true,
    "previous_period": true
  },
  "format": {
    "output": "json",
    "include_metadata": true
  }
}

{
  "info": {
    "name": "ALdeci / FixOps API",
    "description": "Comprehensive API test collection for ALdeci security platform. Covers all 6 suites: Core, Attack, Feeds, Evidence-Risk, Integrations, and API gateway.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "apikey",
    "apikey": [
      { "key": "key", "value": "X-API-Key", "type": "string" },
      { "key": "value", "value": "{{API_TOKEN}}", "type": "string" },
      { "key": "in", "value": "header", "type": "string" }
    ]
  },
  "variable": [
    { "key": "BASE_URL", "value": "http://localhost:8000" },
    { "key": "API_TOKEN", "value": "test-token-123" }
  ],
  "item": [
    {
      "name": "Health & Status",
      "item": [
        {
          "name": "API Status",
          "request": { "method": "GET", "url": "{{BASE_URL}}/api/v1/status" },
          "event": [{ "listen": "test", "script": { "exec": [
            "pm.test('Status 200', () => pm.response.to.have.status(200));",
            "pm.test('Has status field', () => { const j = pm.response.json(); pm.expect(j.status).to.eql('ok'); });"
          ]}}]
        },
        {
          "name": "Copilot Health",
          "request": { "method": "GET", "url": "{{BASE_URL}}/api/v1/copilot/health" },
          "event": [{ "listen": "test", "script": { "exec": [
            "pm.test('Status 200', () => pm.response.to.have.status(200));",
            "pm.test('Copilot healthy', () => { const j = pm.response.json(); pm.expect(j.status).to.eql('healthy'); });"
          ]}}]
        },
        {
          "name": "Feeds Health",
          "request": { "method": "GET", "url": "{{BASE_URL}}/api/v1/feeds/health" },
          "event": [{ "listen": "test", "script": { "exec": [
            "pm.test('Status 200', () => pm.response.to.have.status(200));",
            "pm.test('Feeds healthy', () => { const j = pm.response.json(); pm.expect(j.status).to.eql('healthy'); });"
          ]}}]
        },
        {
          "name": "Attack-Sim Health",
          "request": { "method": "GET", "url": "{{BASE_URL}}/api/v1/attack-sim/health" },
          "event": [{ "listen": "test", "script": { "exec": [
            "pm.test('Status 200', () => pm.response.to.have.status(200));",
            "pm.test('Attack engine healthy', () => { const j = pm.response.json(); pm.expect(j.status).to.eql('healthy'); });"
          ]}}]
        }
      ]
    },
    {
      "name": "Nerve Center",
      "item": [
        {
          "name": "Get Pulse",
          "request": { "method": "GET", "url": "{{BASE_URL}}/api/v1/nerve-center/pulse" },
          "event": [{ "listen": "test", "script": { "exec": [
            "pm.test('Status 200', () => pm.response.to.have.status(200));",
            "pm.test('Has score and level', () => { const j = pm.response.json(); pm.expect(j).to.have.property('score'); pm.expect(j).to.have.property('level'); });"
          ]}}]
        },
        {
          "name": "Get Incidents",
          "request": { "method": "GET", "url": "{{BASE_URL}}/api/v1/nerve-center/pulse" },
          "event": [{ "listen": "test", "script": { "exec": [
            "pm.test('Status 200', () => pm.response.to.have.status(200));",
            "pm.test('Has active_incidents', () => { pm.expect(pm.response.json()).to.have.property('active_incidents'); });"
          ]}}]
        }
      ]
    },
    {
      "name": "Copilot",
      "item": [
        {
          "name": "List Sessions",
          "request": { "method": "GET", "url": "{{BASE_URL}}/api/v1/copilot/sessions" },
          "event": [{ "listen": "test", "script": { "exec": [
            "pm.test('Status 200', () => pm.response.to.have.status(200));",
            "pm.test('Returns array', () => { pm.expect(pm.response.json()).to.be.an('array'); });"
          ]}}]
        },
        {
          "name": "Create Session",
          "request": { "method": "POST", "url": "{{BASE_URL}}/api/v1/copilot/sessions",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\"title\": \"Test Session\"}" }
          },
          "event": [{ "listen": "test", "script": { "exec": [
            "pm.test('Status 200 or 201', () => pm.expect(pm.response.code).to.be.oneOf([200, 201]));",
            "pm.test('Has id', () => { const j = pm.response.json(); pm.expect(j).to.have.property('id'); pm.collectionVariables.set('SESSION_ID', j.id); });"
          ]}}]
        }
      ]
    },
    {
      "name": "Pipeline",
      "item": [
        {
          "name": "List Runs",
          "request": { "method": "GET", "url": "{{BASE_URL}}/api/v1/brain/pipeline/runs" },
          "event": [{ "listen": "test", "script": { "exec": [
            "pm.test('Status 200', () => pm.response.to.have.status(200));",
            "pm.test('Has total field', () => { const j = pm.response.json(); pm.expect(j).to.have.property('total'); });"
          ]}}]
        }
      ]
    },
    {
      "name": "Risk & Evidence",
      "item": [
        {
          "name": "Evidence Stats",
          "request": { "method": "GET", "url": "{{BASE_URL}}/api/v1/evidence/stats" },
          "event": [{ "listen": "test", "script": { "exec": [
            "pm.test('Status 200', () => pm.response.to.have.status(200));",
            "pm.test('Has total_releases', () => { pm.expect(pm.response.json()).to.have.property('total_releases'); });"
          ]}}]
        },
        {
          "name": "Evidence List",
          "request": { "method": "GET", "url": "{{BASE_URL}}/api/v1/evidence/" },
          "event": [{ "listen": "test", "script": { "exec": [
            "pm.test('Status 200', () => pm.response.to.have.status(200));",
            "pm.test('Has count', () => { pm.expect(pm.response.json()).to.have.property('count'); });"
          ]}}]
        }
      ]
    },
    {
      "name": "Auth Verification",
      "item": [
        {
          "name": "Reject missing token",
          "request": { "method": "GET", "url": "{{BASE_URL}}/api/v1/nerve-center/pulse" },
          "auth": { "type": "noauth" },
          "event": [{ "listen": "test", "script": { "exec": [
            "pm.test('Returns 401 or 200 (dev mode)', () => pm.expect(pm.response.code).to.be.oneOf([401, 200]));"
          ]}}]
        }
      ]
    }
  ]
}


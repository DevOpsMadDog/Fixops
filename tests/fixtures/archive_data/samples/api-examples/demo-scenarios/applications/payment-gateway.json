{
  "application_id": "app-payment-gateway",
  "name": "payment-gateway",
  "display_name": "Payment Gateway Service",
  "version": "3.2.1",
  "description": "Core payment processing microservice handling credit card transactions, refunds, and settlements",
  "status": "active",
  "criticality": "critical",
  "tier": "tier-1",
  "domain": "financial-services",
  "architecture": {
    "type": "microservice",
    "pattern": "event-driven",
    "framework": "spring-boot",
    "language": "java",
    "language_version": "17",
    "runtime": "kubernetes"
  },
  "repository": {
    "url": "https://github.com/example/payment-gateway",
    "branch": "main",
    "ci_cd": {
      "platform": "github-actions",
      "pipeline": ".github/workflows/ci.yml",
      "deployment": "argocd"
    }
  },
  "deployment": {
    "environments": [
      {
        "name": "production",
        "cloud": "aws",
        "region": "us-east-1",
        "cluster": "prod-eks-payments",
        "namespace": "payments",
        "replicas": 10,
        "resources": {"cpu": "2", "memory": "4Gi"}
      },
      {
        "name": "staging",
        "cloud": "aws",
        "region": "us-east-1",
        "cluster": "staging-eks",
        "namespace": "payments",
        "replicas": 3
      },
      {
        "name": "development",
        "cloud": "aws",
        "region": "us-west-2",
        "cluster": "dev-eks",
        "namespace": "payments",
        "replicas": 1
      }
    ]
  },
  "data_classification": {
    "level": "highly-confidential",
    "types": ["cardholder_data", "pan", "cvv", "transaction_records"],
    "pii": true,
    "phi": false,
    "financial": true
  },
  "compliance": {
    "frameworks": ["pci-dss-4.0", "soc2-type2", "gdpr"],
    "certifications": ["pci-dss-level-1"],
    "audit_frequency": "quarterly",
    "last_audit": "2024-10-15",
    "next_audit": "2025-01-15"
  },
  "security_tools": {
    "sast": ["sonarqube", "checkmarx"],
    "dast": ["owasp-zap", "burp-suite"],
    "sca": ["snyk", "dependabot"],
    "container": ["trivy", "prisma-cloud"],
    "cloud": ["aws-security-hub", "wiz"],
    "runtime": ["falco", "datadog-security"]
  },
  "integrations": {
    "alm": {
      "jira_project": "PAY",
      "confluence_space": "PAYMENTS",
      "servicenow_ci": "CI-PAY-001"
    },
    "monitoring": {
      "apm": "datadog",
      "logging": "elasticsearch",
      "alerting": "pagerduty"
    },
    "notifications": ["slack:#payments-security", "email:payments-security@example.com"]
  },
  "ownership": {
    "team": "payments-platform",
    "team_id": "team-payments-001",
    "manager": "john.doe@example.com",
    "tech_lead": "jane.smith@example.com",
    "security_champion": "bob.wilson@example.com"
  },
  "dependencies": {
    "upstream": ["identity-service", "fraud-detection", "rate-limiter"],
    "downstream": ["reporting-service", "analytics", "notification-service"],
    "external": ["stripe-api", "plaid-api", "visa-direct"]
  },
  "sla": {
    "availability": "99.99%",
    "response_time_p99_ms": 200,
    "critical_vuln_sla_hours": 24,
    "high_vuln_sla_hours": 72
  }
}

{
  "report_type": "executive_summary",
  "title": "Q1 2025 Security Posture Report",
  "scope": {
    "applications": ["payment-gateway", "user-service", "api-gateway"],
    "environments": ["production", "staging"],
    "date_range": {
      "start": "2025-01-01",
      "end": "2025-03-31"
    }
  },
  "sections": [
    {
      "name": "vulnerability_summary",
      "include": true,
      "options": {
        "show_trends": true,
        "compare_previous_period": true,
        "include_charts": true
      }
    },
    {
      "name": "compliance_status",
      "include": true,
      "options": {
        "frameworks": ["pci-dss", "soc2", "hipaa"],
        "show_gaps": true
      }
    },
    {
      "name": "risk_analysis",
      "include": true,
      "options": {
        "include_ssvc": true,
        "include_epss": true,
        "top_risks": 10
      }
    },
    {
      "name": "remediation_progress",
      "include": true,
      "options": {
        "show_sla_compliance": true,
        "include_burndown": true
      }
    },
    {
      "name": "recommendations",
      "include": true,
      "options": {
        "prioritized": true,
        "include_effort_estimates": true
      }
    }
  ],
  "format": {
    "output_type": "pdf",
    "template": "executive",
    "branding": {
      "logo": "company_logo.png",
      "colors": {
        "primary": "#1a73e8",
        "secondary": "#34a853"
      }
    }
  },
  "distribution": {
    "recipients": ["ciso@example.com", "security-team@example.com"],
    "schedule": "quarterly",
    "encrypt": true
  }
}

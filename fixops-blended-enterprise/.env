# FixOps Blended Enterprise - Environment Configuration

# Application Configuration
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=fixops_enterprise_secret_key_change_in_production_2024

# Performance Configuration
HOT_PATH_TARGET_LATENCY_US=299
MAX_CONNECTIONS_PER_POOL=20

# Database Configuration (PostgreSQL for Enterprise)
DATABASE_URL=postgresql+asyncpg://fixops_user:fixops_password@localhost:5432/fixops_enterprise
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Message Queue Configuration
RABBITMQ_URL=amqp://localhost:5672
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security Configuration
ALLOWED_HOSTS=*
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Enterprise Integrations (Optional)
SLACK_BOT_TOKEN=
JIRA_URL=
JIRA_USERNAME=
JIRA_API_TOKEN=

# ML Configuration
ML_MODEL_PATH=/app/models
ENABLE_ML_INFERENCE=true
ML_BATCH_SIZE=32

# Compliance Configuration
AUDIT_LOG_RETENTION_DAYS=2555
ENCRYPT_SENSITIVE_DATA=true
REQUIRE_MFA=false
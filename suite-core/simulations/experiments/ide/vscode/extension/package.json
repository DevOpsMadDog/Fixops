{
  "name": "fixops",
  "displayName": "FixOps Security",
  "description": "FixOps vulnerability management for VS Code",
  "version": "1.0.0",
  "publisher": "fixops",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Linters",
    "Security"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fixops.scan",
        "title": "FixOps: Scan Workspace"
      },
      "fixops.scanFile",
      "fixops.fix",
      "fixops.showIssues"
    ],
    "configuration": {
      "title": "FixOps",
      "properties": {
        "fixops.apiUrl": {
          "type": "string",
          "default": "https://api.fixops.com",
          "description": "FixOps API URL"
        },
        "fixops.apiKey": {
          "type": "string",
          "description": "FixOps API Key"
        },
        "fixops.enableRealTime": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time vulnerability detection"
        }
      }
    },
    "problemMatchers": [
      {
        "owner": "fixops",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.5.0"
  }
}

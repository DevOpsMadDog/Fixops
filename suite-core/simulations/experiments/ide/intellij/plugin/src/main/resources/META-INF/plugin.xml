<?xml version="1.0" encoding="UTF-8"?>
<idea-plugin>
    <id>com.fixops.security</id>
    <name>FixOps Security</name>
    <version>1.0.0</version>
    <vendor email="support@fixops.com" url="https://fixops.com">FixOps</vendor>
    
    <description><![CDATA[
        FixOps vulnerability management for IntelliJ IDEA.
        Real-time security scanning, vulnerability detection, and automated remediation.
    ]]></description>
    
    <change-notes><![CDATA[
        Initial release of FixOps IntelliJ plugin.
    ]]></change-notes>
    
    <idea-version since-build="231.0"/>
    
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="FixOps" secondary="true" anchor="bottom" 
                    factoryClass="com.fixops.intellij.FixOpsToolWindowFactory"/>
        
        <inspectionToolProvider implementation="com.fixops.intellij.FixOpsInspectionProvider"/>
        
        <codeInsight.lineMarkerProvider language="JAVA" 
                                        implementationClass="com.fixops.intellij.FixOpsLineMarkerProvider"/>
    </extensions>
    
    <actions>
        <action id="FixOps.Scan" class="com.fixops.intellij.ScanAction" 
                text="Scan for Vulnerabilities" description="Scan current file for security vulnerabilities">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt S"/>
        </action>
        
        <action id="FixOps.ScanProject" class="com.fixops.intellij.ScanProjectAction" 
                text="Scan Project" description="Scan entire project for vulnerabilities">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
        
        <action id="FixOps.Fix" class="com.fixops.intellij.FixAction" 
                text="Apply Fix" description="Apply automated fix for vulnerability">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>

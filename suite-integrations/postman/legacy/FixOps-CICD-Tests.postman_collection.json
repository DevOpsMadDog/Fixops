{
  "info": {
    "_postman_id": "fixops-cicd-tests-collection",
    "name": "FixOps CI/CD Tests Collection",
    "description": "CI/CD pipeline integration tests for FixOps. Validates deployment decisions, policy enforcement, and evidence signing.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "apiToken",
      "value": "{{FIXOPS_API_TOKEN}}",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Pre-Deployment Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/ready"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('API is ready for deployment checks', function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    },
    {
      "name": "2. Payment Service - Should ALLOW",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{apiToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"service_name\": \"payment-service\",\n  \"environment\": \"staging\",\n  \"commit_sha\": \"abc123def456\",\n  \"findings\": [\n    {\n      \"cve_id\": \"CVE-2024-00001\",\n      \"severity\": \"low\",\n      \"cvss_score\": 3.1\n    }\n  ],\n  \"business_context\": {\n    \"criticality\": \"medium\",\n    \"data_classification\": \"internal\"\n  }\n}"
        },
        "url": "{{baseUrl}}/api/v1/cicd/decision"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Payment service deployment should be ALLOWED', function () {",
              "    pm.response.to.have.status(200);",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.decision).to.be.oneOf(['allow', 'ALLOW']);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    },
    {
      "name": "3. Auth Service - Should BLOCK",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{apiToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"service_name\": \"auth-service\",\n  \"environment\": \"production\",\n  \"commit_sha\": \"xyz789abc012\",\n  \"findings\": [\n    {\n      \"cve_id\": \"CVE-2021-44228\",\n      \"severity\": \"critical\",\n      \"cvss_score\": 10.0,\n      \"is_kev\": true\n    }\n  ],\n  \"business_context\": {\n    \"criticality\": \"critical\",\n    \"data_classification\": \"pci-dss\"\n  }\n}"
        },
        "url": "{{baseUrl}}/api/v1/cicd/decision"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Auth service with critical KEV should be BLOCKED', function () {",
              "    pm.response.to.have.status(200);",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.decision).to.be.oneOf(['block', 'BLOCK']);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    },
    {
      "name": "4. API Gateway - Should DEFER",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{apiToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"service_name\": \"api-gateway\",\n  \"environment\": \"production\",\n  \"commit_sha\": \"def456ghi789\",\n  \"findings\": [\n    {\n      \"cve_id\": \"CVE-2024-00002\",\n      \"severity\": \"medium\",\n      \"cvss_score\": 5.5\n    }\n  ],\n  \"business_context\": {\n    \"criticality\": \"high\",\n    \"data_classification\": \"confidential\",\n    \"requires_review\": true\n  }\n}"
        },
        "url": "{{baseUrl}}/api/v1/cicd/decision"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('API Gateway with medium severity should DEFER to review', function () {",
              "    pm.response.to.have.status(200);",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.decision).to.be.oneOf(['defer', 'DEFER', 'review', 'REVIEW']);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    },
    {
      "name": "KEV Hard Block Without Waiver",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{apiToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"policy_type\": \"kev_hard_block\",\n  \"service_name\": \"critical-banking-service\",\n  \"findings\": [\n    {\n      \"cve_id\": \"CVE-2021-44228\",\n      \"severity\": \"critical\",\n      \"cvss_score\": 10.0,\n      \"is_kev\": true,\n      \"kev_due_date\": \"2024-01-15\"\n    }\n  ],\n  \"waiver\": null\n}"
        },
        "url": "{{baseUrl}}/policy/evaluate"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('KEV without waiver should be hard blocked', function () {",
              "    pm.response.to.have.status(200);",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.result).to.be.oneOf(['block', 'BLOCK', 'deny', 'DENY']);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    },
    {
      "name": "Signed Evidence Retrieval",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{apiToken}}"
          }
        ],
        "url": "{{baseUrl}}/decisions/evidence/latest"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Evidence retrieval returns signed bundle', function () {",
              "    pm.response.to.have.status(200);",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('evidence_id');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    },
    {
      "name": "Negative Signature Verification",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{apiToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"evidence_id\": \"test-evidence-001\",\n  \"signature\": \"invalid-signature-for-negative-test\",\n  \"expected_result\": \"invalid\"\n}"
        },
        "url": "{{baseUrl}}/cicd/verify-signature"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Invalid signature should be rejected', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.valid).to.be.oneOf([false, 'false', 'invalid']);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    }
  ]
}

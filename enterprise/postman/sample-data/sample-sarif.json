{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "SARIF Sample for Bank Testing",
	"description": "Sample SARIF file representing SonarQube scan results for payment service",
	"$id": "https://bank.internal/schemas/sample-sarif.json",
	"version": "2.1.0",
	"runs": [
		{
			"tool": {
				"driver": {
					"name": "SonarQube",
					"version": "9.9.0",
					"organization": "Bank Security Team",
					"informationUri": "https://sonarqube.bank.internal"
				}
			},
			"results": [
				{
					"ruleId": "sql-injection-risk",
					"level": "warning",
					"message": {
						"text": "Potential SQL injection vulnerability detected in payment endpoint"
					},
					"locations": [
						{
							"physicalLocation": {
								"artifactLocation": {
									"uri": "src/main/java/com/bank/payment/PaymentController.java"
								},
								"region": {
									"startLine": 156,
									"endLine": 160
								}
							}
						}
					]
				},
				{
					"ruleId": "hardcoded-secret",
					"level": "error", 
					"message": {
						"text": "Hardcoded API key detected in payment configuration"
					},
					"locations": [
						{
							"physicalLocation": {
								"artifactLocation": {
									"uri": "src/main/resources/application.properties"
								},
								"region": {
									"startLine": 23
								}
							}
						}
					]
				},
				{
					"ruleId": "crypto-weak-algorithm",
					"level": "warning",
					"message": {
						"text": "Weak cryptographic algorithm MD5 used for financial data hashing"
					},
					"locations": [
						{
							"physicalLocation": {
								"artifactLocation": {
									"uri": "src/main/java/com/bank/crypto/HashUtils.java"
								},
								"region": {
									"startLine": 89
								}
							}
						}
					]
				}
			]
		}
	]
}
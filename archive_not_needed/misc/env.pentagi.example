# PentAGI Integration Configuration for FixOps
# Copy this file to .env.pentagi and configure as needed
# Usage: docker compose -f docker-compose.yml -f docker-compose.pentagi.yml --env-file .env.pentagi up -d

# =============================================================================
# PentAGI Image Configuration
# =============================================================================
# Default: upstream vxcontrol/pentagi:latest
# To use your fork with VXControl Cloud SDK removed, set:
#   PENTAGI_IMAGE=ghcr.io/devopsmaddog/pentagi_fork:latest
# Note: You must build and push your fork's image first
#
# IMPORTANT: For production deployments, pin to a specific version tag
# instead of using :latest to ensure reproducibility. Example:
#   PENTAGI_IMAGE=vxcontrol/pentagi:v1.0.0

PENTAGI_IMAGE=vxcontrol/pentagi:latest

# =============================================================================
# PentAGI Core Settings
# =============================================================================

# Debug mode (set to true for verbose logging)
PENTAGI_DEBUG=false

# Listen address and port for PentAGI API
PENTAGI_LISTEN_IP=127.0.0.1
PENTAGI_LISTEN_PORT=8443

# Enable/disable SSL (recommended: true for production)
PENTAGI_USE_SSL=true

# Public URL for PentAGI (used for callbacks and webhooks)
PENTAGI_PUBLIC_URL=https://localhost:8443

# CORS origins (comma-separated list of allowed origins)
PENTAGI_CORS_ORIGINS=http://localhost:8000,http://fixops:8000

# =============================================================================
# License Configuration (No Cloud Validation Required)
# =============================================================================
# Note: VXControl Cloud SDK has been removed from our fork
# License keys are accepted as-is without cloud validation
# This enables fully offline/air-gapped operation

PENTAGI_INSTALLATION_ID=
PENTAGI_LICENSE_KEY=

# =============================================================================
# LLM Provider Configuration
# =============================================================================
# PentAGI will use the same API keys as FixOps
# At least one provider must be configured
# Note: PentAGI uses OPEN_AI_KEY (with underscore) internally

# OpenAI (PentAGI expects OPEN_AI_KEY)
OPEN_AI_KEY=

# Anthropic Claude
ANTHROPIC_API_KEY=

# Google Gemini (PentAGI expects GEMINI_API_KEY)
GEMINI_API_KEY=

# =============================================================================
# Database Configuration
# =============================================================================

# WARNING: Change these credentials before deploying to production!
PENTAGI_POSTGRES_USER=pentagi
PENTAGI_POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
PENTAGI_POSTGRES_DB=pentagidb

# Database listen address (for direct access, optional)
PENTAGI_DB_LISTEN_IP=127.0.0.1
PENTAGI_DB_LISTEN_PORT=5433

# =============================================================================
# Scraper Configuration
# =============================================================================

# WARNING: Change these credentials before deploying to production!
LOCAL_SCRAPER_USERNAME=scraper
LOCAL_SCRAPER_PASSWORD=CHANGE_ME_IN_PRODUCTION
PENTAGI_SCRAPER_MAX_SESSIONS=10

# Scraper listen address (for direct access, optional)
PENTAGI_SCRAPER_LISTEN_IP=127.0.0.1
PENTAGI_SCRAPER_LISTEN_PORT=9443

# =============================================================================
# Docker Configuration (for sandboxed execution)
# =============================================================================

# Docker socket path
PENTAGI_DOCKER_SOCKET=/var/run/docker.sock

# Set to true since PentAGI runs inside Docker in this compose setup
# This affects how PentAGI interacts with the Docker socket
DOCKER_INSIDE=true

# Enable NET_ADMIN capability for network tools
DOCKER_NET_ADMIN=false

# =============================================================================
# Search Providers (Optional)
# =============================================================================

# Enable DuckDuckGo search (no API key required)
PENTAGI_DUCKDUCKGO_ENABLED=true

# Tavily API for enhanced search (optional)
TAVILY_API_KEY=

# =============================================================================
# Optional Integrations (Disabled by Default for Air-Gapped Operation)
# =============================================================================

# Graphiti knowledge graph (requires Neo4j)
PENTAGI_GRAPHITI_ENABLED=false

# Langfuse observability (requires Langfuse server)
PENTAGI_LANGFUSE_BASE_URL=

# OpenTelemetry collector
PENTAGI_OTEL_HOST=
